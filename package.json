{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "scripts": {
    "config-rel": "cmake -B build-rel -G Ninja -S . -DCMAKE_PROJECT_TOP_LEVEL_INCLUDES=cmake/conan_provider.cmake -DCMAKE_BUILD_TYPE=Release",
    "build-rel": "cmake --build build-rel --config Release",
    "config-dbg": "cmake -B build-dbg -G Ninja -S . -DCMAKE_PROJECT_TOP_LEVEL_INCLUDES=cmake/conan_provider.cmake -DCMAKE_BUILD_TYPE=Debug",
    "build-dbg": "cmake --build build-dbg --config Debug",
    "rbld": "cmake --build --preset conan-release",
    "dbld": "cmake --build --preset conan-debug",
    "dev": "bun --hot src/index.tsx",
    "wdbld": "bun build ./src/index.html --outdir=build-dbg/www --sourcemap --target=browser --define:process.env.NODE_ENV='\"debug\"' --env='BUN_PUBLIC_*'",
    "wrbld": "bun build ./src/index.html --outdir=build-rel/www --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.tsx",
    "format": "tools format bun",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@freik/workspace": "^0.6.5",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "clang-format": "^1.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3"
  }
}

{
  "name": "freik-local-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "tools format bun",
    "cfg": "cmake -B build -G \"Ninja Multi-Config\" -S . -DCMAKE_PROJECT_TOP_LEVEL_INCLUDES=cmake/conan_provider.cmake",
    "dcpp": "cmake --build build --config Debug",
    "rcpp": "cmake --build build --config Release",
    "dwww": "bun run scripts/webbuild.ts Debug",
    "rwww": "bun run scripts/webbuild.ts Release",
    "dbld": "bun run scripts/parbld.ts Debug",
    "rbld": "bun run scripts/parbld.ts Release",
    "drun": "cd build/Debug && ./cassette",
    "rrun": "cd build/Release && ./cassette",
    "dbr": "bun run dbld && bun run drun",
    "rbr": "bun run rbld && bun run rrun"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.64.0",
    "jotai": "^2.12.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@freik/workspace": "^0.6.5",
    "@types/bun": "latest",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "clang-format": "^1.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3"
  }
}

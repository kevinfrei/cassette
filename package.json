{
  "name": "cassette",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "tools format bun",
    "fmt": "tools format bun",
    "clean": "bun run scripts/clean.ts",
    "dcfg": "cmake --preset debug",
    "rcfg": "cmake --preset release",
    "cfg": "bun run dcfg",
    "dcpp": "cmake --build build/Debug",
    "rcpp": "cmake --build build/Release",
    "cpp": "bun run dcpp",
    "dwww": "bun run scripts/webbuild.ts Debug",
    "rwww": "bun run scripts/webbuild.ts Release",
    "www": "bun run dwww",
    "dbld": "bun run scripts/parbld.ts Debug",
    "rbld": "bun run scripts/parbld.ts Release",
    "bld": "bun run dbld",
    "dtst": "bun run dcpp && cd build/Debug/test && ctest -C Debug --output-on-failure",
    "dtest": "bun run dcpp && cd build/Debug/test && ctest -C Debug --output-on-failure",
    "rtst": "bun run rcpp && cd build/Release/test && ctest -C Release",
    "rtest": "bun run rcpp && cd build/Release/test && ctest -C Release",
    "tst": "bun run dtst",
    "test": "bun run dtst",
    "drun": "./build/Debug/cpp/cassette",
    "rrun": "./build/Release/cpp/cassette",
    "run": "bun run drun",
    "dbr": "bun run dbld && bun run drun",
    "rbr": "bun run rbld && bun run rrun",
    "br": "bun run dbr",
    "typecheck": "tsc --noEmit",
    "typechk": "tsc --noEmit",
    "***": "Generate the TypeScript & C++ types from the Crow IDL definitions",
    "gen": "crow-idl www/Shared/Definitions.ts -c:include/CommonTypes.hpp -t:www/Shared/CommonTypes.ts"
  },
  "dependencies": {
    "@fluentui/react": "^8.123.2",
    "@fluentui/react-components": "^9.67.0",
    "@fluentui/react-icons-mdl2": "^1.3.87",
    "@freik/containers": "^0.4.4",
    "@freik/fluentui-tools": "^1.2.4",
    "@freik/logger": "^0.4.4",
    "@freik/media-core": "^0.16.4",
    "@freik/react-tools": "^0.3.4",
    "@freik/seqnum": "^1.3.4",
    "@freik/sync": "^0.4.4",
    "@freik/typechk": "^0.9.0",
    "crow-idl": "^0.1.2",
    "jotai": "^2.12.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@freik/workspace": "^0.6.5",
    "@types/bun": "^1.2.19",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "clang-format": "^1.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
